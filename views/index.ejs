<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- My CSS -->
    <link rel="stylesheet" href="style.css" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

    <title>Hello, this is index</title>
  </head>
  <body>
    <%- include("./component/navbar.ejs") %>
    <div class="container" style="margin-top: 30px">
      <!-- Makanan Basah -->
      <section id="content" class="mb-5 mt-5">
        <div class="container">
          <div class="row">
            <div class="col">
              <p class="fs-5 mb-4">Makanan Kering</p>
            </div>
          </div>
          <div class="row">
            <% for (let i = 0; i < result.length; i++) { if(result[i].category_name=='makanan kering'){ %>
            <div class="col-3">
              <div class="card">
                <img src="img/<%= result[i].image%> " class="card-img-top" alt="pepes" style="width: auto; height: 220px; object-fit: cover" />
                <div class="card-body">
                  <h5 class="card-title"><%= result[i].name %></h5>
                  <p class="card-text">Stok : <%= result[i].stok %></p>
                  <a href="#" class="btn btn-primary">buy</a>
                  <a href="/edit-food/<%= result[i].id%>" class="btn btn-warning" style="margin-right: 10px"> Edit </a>
                  <a href="process-delete-food/<%= result[i].id %>" class="btn btn-danger">delet</a>
                </div>
              </div>
            </div>
            <% } } %>
          </div>
        </div>
      </section>
      <!-- Makanan Kuah -->
      <section id="content" class="mb-5">
        <div class="container">
          <div class="row">
            <div class="col">
              <p class="fs-5 mb-4">Makanan Kuah</p>
            </div>
          </div>
          <div class="row">
            <% for (let i = 0; i < result.length; i++) { if(result[i].category_name=='makanan kuah'){ %>
            <div class="col-3">
              <div class="card">
                <img src="img/<%= result[i].image %>" class="card-img-top" alt="pepes" style="width: auto; height: 220px; object-fit: cover" />
                <div class="card-body">
                  <h5 class="card-title"><%= result[i].name %></h5>
                  <p class="card-text">Stok : <%= result[i].stok %></p>
                  <a href="#" class="btn btn-primary">buy</a>
                  <a href="/edit-food/<%= result[i].id%>" class="btn btn-warning" style="margin-right: 10px"> Edit </a>
                  <a href="process-delete-food/<%= result[i].id %>" class="btn btn-danger">delet</a>
                </div>
              </div>
            </div>
            <% } } %>
          </div>
        </div>
      </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
